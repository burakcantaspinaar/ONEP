<script>
function filterOrders(status) {
    // Remove active class from all tabs
    document.querySelectorAll('.filter-tab').forEach(tab => {
        tab.classList.remove('active');
    });
    
    // Add active class to clicked tab
    event.target.classList.add('active');
    
    // Filter order cards
    const orderCards = document.querySelectorAll('.order-card');
    orderCards.forEach(card => {
        if (status === 'all' || card.dataset.status === status) {
            card.style.display = 'block';
        } else {
            card.style.display = 'none';
        }
    });
}

function trackOrder(orderNumber) {
    document.getElementById('trackingOrderNumber').textContent = orderNumber;
    
    // Show modal
    const modal = new bootstrap.Modal(document.getElementById('trackingModal'));
    modal.show();
}

function showOrderDetails(orderNumber) {
    // In a real app, this would navigate to a detailed order page
    alert(`${orderNumber} numaralı siparişin detayları gösterilecek.`);
}

function reorderItems(orderNumber) {
    if (confirm('Bu siparişteki ürünleri sepetinize eklemek istiyor musunuz?')) {
        // Simulate adding items to cart
        const cartCount = document.getElementById('cartCount');
        const currentCount = parseInt(cartCount.textContent);
        cartCount.textContent = currentCount + 2;
        
        // Show success message
        const toast = document.createElement('div');
        toast.className = 'position-fixed top-0 end-0 p-3';
        toast.style.zIndex = '9999';
        toast.innerHTML = `
            <div class="toast show" role="alert">
                <div class="toast-header">
                    <i class="fas fa-check-circle text-success me-2"></i>
                    <strong class="me-auto">Başarılı</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
                </div>
                <div class="toast-body">
                    Ürünler sepetinize eklendi!
                </div>
            </div>
        `;
        document.body.appendChild(toast);
        
        setTimeout(() => {
            toast.remove();
        }, 3000);
    }
}

function reviewOrder(orderNumber) {
    alert(`${orderNumber} numaralı sipariş için değerlendirme sayfası açılacak.`);
}

function downloadOrderHistory() {
    // Simulate PDF download
    const link = document.createElement('a');
    link.href = '#';
    link.download = 'siparis-gecmisi.pdf';
    
    // Show downloading message
    const btn = event.target;
    const originalText = btn.innerHTML;
    btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>İndiriliyor...';
    btn.disabled = true;
    
    setTimeout(() => {
        btn.innerHTML = originalText;
        btn.disabled = false;
        alert('PDF dosyası indirilmeye başladı!');
    }, 2000);
}

function loadMoreOrders() {
    // Simulate loading more orders
    const btn = event.target;
    const originalText = btn.innerHTML;
    btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Yükleniyor...';
    btn.disabled = true;
    
    setTimeout(() => {
        btn.innerHTML = originalText;
        btn.disabled = false;
        alert('Daha fazla sipariş bulunamadı.');
    }, 1500);
}

// Search functionality
document.getElementById('searchInput').addEventListener('input', function() {
    const searchTerm = this.value.toLowerCase();
    const orderCards = document.querySelectorAll('.order-card');
    
    orderCards.forEach(card => {
        const orderNumber = card.querySelector('.order-number').textContent.toLowerCase();
        const itemNames = Array.from(card.querySelectorAll('.item-name')).map(el => el.textContent.toLowerCase());
        
        const matches = orderNumber.includes(searchTerm) || itemNames.some(name => name.includes(searchTerm));
        
        card.style.display = matches ? 'block' : 'none';
    });
});

// Auto-refresh order status (in real app)
setInterval(() => {
    // Check for order status updates
    console.log('Checking for order status updates...');
}, 60000); // Check every minute
</script>
